# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/parkease

# MongoDB Atlas (Production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/parkease?retryWrites=true&w=majority

# ============================================
# JWT CONFIGURATION
# ============================================
# Use a strong, randomly generated secret (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# ============================================
# CLOUDINARY CONFIGURATION
# ============================================
# Sign up at: https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# RAZORPAY CONFIGURATION
# ============================================
# Sign up at: https://razorpay.com
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# GOOGLE MAPS API
# ============================================
# Get API key at: https://console.cloud.google.com
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# NYCKEL API (AI PHOTO VERIFICATION)
# ============================================
# Sign up at: https://www.nyckel.com
NYCKEL_CLIENT_ID=your_nyckel_client_id
NYCKEL_CLIENT_SECRET=your_nyckel_client_secret
NYCKEL_FUNCTION_ID=your_function_id

# ============================================
# EMAIL CONFIGURATION (NODEMAILER)
# ============================================
# For Gmail: Enable "Less secure app access" or use App Password
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=ParkEase <noreply@parkease.com>

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:5173

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Max file size in bytes (5MB = 5242880 bytes)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# ============================================
# PLATFORM CONFIGURATION
# ============================================
# Platform fee percentage (e.g., 10 = 10%)
PLATFORM_FEE_PERCENTAGE=10

# Minimum booking duration in hours
MIN_BOOKING_HOURS=1

# Maximum booking duration in days
MAX_BOOKING_DAYS=30

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Maximum login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
LOCKOUT_DURATION=30

# ============================================
# PAGINATION DEFAULTS
# ============================================
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
